{% extends "/layouts/base.twig" %}
{% block content %}
{% include "/elements/header.twig" %}
<header id="canvas-container">
  <div class="parallax-picture  all-bg">
    <div class="top_pic">
      <article id="recommend-pic" class="parallax-pic_inner">
        <h1>メッセージ送信</h1>
        <svg class="editorial" viewBox="0 24 150 28" preserveAspectRatio="none">
          <defs>
            <path id="gentle-wave" d="m -160,44.4 c 30,0 58,-18 87.7,-18 30.3,0 58.3,18 87.3,18 30,0 58,-18 88,-18 30,0 58,18 88,18 l 0,34.5 -351,0 z"/>
          </defs>
          <g class="parallax">
            <use xlink:href="#gentle-wave" x="50" y="0" fill="#fff"/>
          </g>
        </svg>
      </article>
    </div>
  </div>
</header>
<!-- ./FV -->

<!-- 固定ページテンプレート -->
<article id="page-wrapper">
  <!-- Page Content -->
  <div class="container">
    <hr class="style-hr">
    <!-- pタグ自動挿入制御 -->
    <article class="company_content">
      <div class="row">
        <div class="col-sm-3">
          {% include "/elements/admin_left_column.twig" %}
        </div>
        <div class="col-sm-9">
          {% if error_message | length > 0 %}
          <p>{{error_message}}</p>
          {% endif %}
          <div class="panel panel-default">
            <div class=panel-body>
              <h1>学生向けメッセージ配信</h1>
              <form action=/admin/send_message/to_student_confirm method=post id=form_to_student_confirm>
                <div class=form-group>
                  <label for>タイトル (必須)</label>
                  <input type=text class=form-control name=title value=【ITブートキャンプ】></div>
                  <div class=form-group>
                    <label for>本文 (必須)</label>
                    <p>※下記文章がメッセージの最後に自動的に挿入されます</p>
                    <p>
                      <span>==========================================</span><br>
                      <span>株式会社 Cajon</span><br>
                      <span>==========================================</span>
                    </p>
                    <textarea class=form-control cols=40 rows=20 name=content></textarea>
                  </div>
                  <div class="btn-wrapper update"><input class="btn btn-green" id=submit_message_to_student type=submit value=メッセージを送信する></div><input type=hidden name=_token id=csrf_token value={{csrf_token}}></form>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </article>
  {% endblock %}
