{% extends "/layouts/base.twig" %}
{% block content %}
{% include "/elements/header.twig" %}
<!-- FV -->
<header id="canvas-container">
  <div class="parallax-picture  all-bg">
    <div class="top_pic">
      <article id="recommend-pic" class="parallax-pic_inner">
        <h1>マイページ</h1>
        <svg class="editorial" viewBox="0 24 150 28" preserveAspectRatio="none">
          <defs>
            <path id="gentle-wave" d="m -160,44.4 c 30,0 58,-18 87.7,-18 30.3,0 58.3,18 87.3,18 30,0 58,-18 88,-18 30,0 58,18 88,18 l 0,34.5 -351,0 z"/>
          </defs>
          <g class="parallax">
            <use xlink:href="#gentle-wave" x="50" y="0" fill="#fff"/>
          </g>
        </svg>
      </article>
    </div>
  </div>
</header>
<!-- ./FV -->

<!-- 固定ページテンプレート -->
<article id="page-wrapper">
  <!-- Page Content -->
  <div class="container">
    <hr class="style-hr">
    <!-- pタグ自動挿入制御 -->
    <article class="company_content">
      <div class="container two-column">
        <div class=row>
          <div class="col-sm-12 single-top"></div>{% include "/elements/mypage_left_column.twig" %}
          <div class="col-sm-9 content">
            <div class="panel panel-default">
              <div class=panel-body>
                <h2>パスワード変更</h2>
                <section>
                  <form action=/mypage/password/confirm method=POST>
                    <div class=form-group>
                      <label for=current_password>現在のパスワード</label>
                      <input type=password name=current_password class=form-control>
                    </div>
                    <div class=form-group>
                      <label for=new_password>新しいパスワード</label>
                      <input type=password name=new_password class=form-control>
                    </div>
                    <div class=btn-wrapper style=text-align:right;>
                      <input type=submit class="btn btn-primary" value=変更する>
                    </div>
                    <input name=_token type=hidden value={{csrf_token}}>
                  </form>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</article>
{% endblock %}
