{% extends "/layouts/base.twig" %} {% block content %} {% include "/elements/header.twig" %}
<!-- FV -->
<header id="canvas-container">
  <div class="parallax-picture  all-bg">
    <div class="top_pic">
      <article id="recommend-pic" class="parallax-pic_inner">
        <h1>ログイン</h1>
        <svg class="editorial" viewBox="0 24 150 28" preserveAspectRatio="none">
          <defs>
            <path id="gentle-wave" d="m -160,44.4 c 30,0 58,-18 87.7,-18 30.3,0 58.3,18 87.3,18 30,0 58,-18 88,-18 30,0 58,18 88,18 l 0,34.5 -351,0 z"/>
          </defs>
          <g class="parallax">
            <use xlink:href="#gentle-wave" x="50" y="0" fill="#fff"/>
          </g>
        </svg>
      </article>
    </div>
  </div>
</header>
<!-- ./FV -->

<!-- 固定ページテンプレート -->
<article id="page-wrapper">
  <!-- Page Content -->
  <div class="container">
    <hr class="style-hr">

    <!-- 固定ページテンプレート -->
    <section class="page-content">

      <!-- pタグ自動挿入制御 -->
      <article class="company_content">
        <div>
          <form action=/login_confirm method=POST>
            <label>メールアドレスでログインする</label><br>
            {% if error_message |length > 0 %}
            <div id=error_message class=form-group>
              <span class=help-block style=color:#D8127D;>{{error_message}}</span>
            </div>
            {% endif %}
            <div class=form-group>
              <input id=input_email class=form-control placeholder=メールアドレス type=email name=email>
            </div>
            <div class=form-group>
              <input id=input_password class=form-control placeholder=パスワード type=password name=password>
            </div>
            <div class=text-center>
              <input type=submit class="btn btn-primary" id=login_submit value=ログイン>
            </div>
            <input type=hidden name=_token value={{csrf_token}}>
          </form>
        </div>

        <hr>
        <p>
          LINE@ LINE@では卒業後のお仕事や島のシェアハウスの風景など非公開情報を公開します！
        </p>

        {% include "/elements/contact_link.twig" %}
      </section>
    </div>
  </article>
{% endblock %}
